{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Fog Programming Language",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#types"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#numeric_literals"
		},
		{
			"include": "#math_operators"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.Fog",
			"begin": "#",
			"end": "\n",
			"patterns": [
				{
					"name": "constant.character.escape.Fog",
					"match": "\\\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.Fog",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.Fog",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"patterns": [{
				"name": "support.type",
				"match": "\\b(int|float|uint|inthalf|floathalf|uinthalf|intlong|floatlong|uintlong|uintsmall|string|void|bool)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.Fog",
				"match": "\\b(import|if|while|for|return)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "support.function",
				"match": "\\b(\\w+)\\s*(?=\\()"
			}]
		},
		"numeric_literals": {
			"name": "constant.numeric.fog",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		}
	},
	"scopeName": "source.f"
}